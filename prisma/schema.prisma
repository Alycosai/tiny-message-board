// prisma/schema.prisma

// Docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String   @default("Anonymous")   // <— TEMP default so migration can run
  content   String
  sourceIp  String   @default("unknown")     // <— TEMP default so migration can run

  @@index([createdAt, id])
}

model AccessLog {
  id        String   @id @default(uuid())
  ts        DateTime @default(now())
  path      String
  remoteIp  String
  userAgent String
  authUser  String?
  status    Int

  @@index([ts])
  @@index([remoteIp])
  @@index([path])
}
