datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  author     String?
  content    String
  sourceIp   String?
}

model AccessLog {
  id        String   @id @default(uuid())
  ts        DateTime @default(now())
  path      String
  remoteIp  String
  userAgent String
  authUser  String?
  status    Int

  @@index([ts])
  @@index([remoteIp])
}
